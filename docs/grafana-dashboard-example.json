{
  "dashboard": {
    "title": "RusToK Platform Metrics",
    "tags": ["rustok", "cms", "ecommerce"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Content Operations",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(rustok_content_operations_total[5m])",
            "legendFormat": "{{operation}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Operations/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Content Operation Duration (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rustok_content_operation_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "Commerce Operations",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(rustok_commerce_operations_total[5m])",
            "legendFormat": "{{operation}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Operations/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Commerce Operation Duration (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rustok_commerce_operation_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "HTTP Requests",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "rate(rustok_http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rustok_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}} - p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Tenant Cache Stats",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "rustok_tenant_cache_hits / (rustok_tenant_cache_hits + rustok_tenant_cache_misses)",
            "refId": "A"
          }
        ],
        "options": {
          "text": {
            "titleSize": 14,
            "valueSize": 32
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 0.7, "color": "yellow" },
                { "value": 0.9, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Tenant Cache Entries",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
        "targets": [
          {
            "expr": "rustok_tenant_cache_entries",
            "refId": "A"
          }
        ],
        "options": {
          "text": {
            "titleSize": 14,
            "valueSize": 32
          }
        }
      },
      {
        "id": 9,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "rustok_http_active_connections",
            "refId": "A"
          }
        ],
        "options": {
          "text": {
            "titleSize": 14,
            "valueSize": 32
          }
        }
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
        "targets": [
          {
            "expr": "rate(rustok_http_requests_total{status=~\"5..\"}[5m]) / rate(rustok_http_requests_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "text": {
            "titleSize": 14,
            "valueSize": 32
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.01, "color": "yellow" },
                { "value": 0.05, "color": "red" }
              ]
            }
          }
        }
      }
    ]
  }
}
